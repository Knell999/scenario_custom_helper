# Google Gemini API Configuration
GOOGLE_MODEL=gemini-2.5-flash-preview-05-20
GOOGLE_TEMPERATURE=1.0
GOOGLE_MAX_TOKENS=65000
GOOGLE_TIMEOUT=30
GOOGLE_API_KEY=your_google_api_key_here

# Application Configuration
APP_NAME=Story Making Chatbot
APP_VERSION=1.0.0
ENVIRONMENT=development

# Security Configuration
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1
MAX_FILE_SIZE_MB=10

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./data/stories.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096
OPENAI_TIMEOUT=30

# Storage Configuration
STORIES_DIR=saved_stories
BACKUP_DIR=backups
MAX_STORIES_PER_USER=100

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_MONITORING=true
